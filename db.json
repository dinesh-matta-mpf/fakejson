{
	"jsonschema": {
		"title": "Location",
		"type": "object",
		"properties": {
			"location": {
				"type": "string",
				"title": "Where do you live?",
				"enum": ["us", "nordic", "other"],
				"enumNames": ["US", "Nordic country", "Other"]
			},
			"state": {
				"type": "string",
				"title": "State",
				"enum": ["AL", "AK", "AZ"],
				"enumNames": ["Alabama", "Alaska", "Arizona"]
			},
			"nordicCountry": {
				"type": "string",
				"title": "Country",
				"enum": ["de", "fi", "is", "no", "sv"],
				"enumNames": ["Denmark", "Finland", "Iceland", "Norway", "Sweden"]
			},
			"region": {
				"type": "string",
				"title": "Region"
			},
			"country": {
				"type": "string",
				"title": "Country"
			},
			"city": {
				"type": "string",
				"title": "City"
			}
		}
	},
	"uischema": {
	  "ui:order": ["location", "state", "nordicCountry", "country", "region", "city"],
	  "location": {
	    "ui:widget": "radio",
	    "ui:options": {
		"inline": true
	    },
	    "classNames": "col-xs-12"
	  },
	  "state": {
	    "condition": "location=us",
	    "classNames": "col-xs-6"
	  },
	  "nordicCountry": {
	    "condition": "location=nordic",
	    "ui:widget": "radio",
	    "classNames": "col-xs-6"
	  },
	  "country": {
	    "condition": "location=other",
	    "classNames": "col-xs-6"
	  },
	  "city": {
	    "condition": "location=us,nordic,other",
	    "classNames": "col-xs-6"
	  },
	  "region": {
	    "condition": "location=other||nordicCountry=fi,de,no,sv",
	    "classNames": "col-xs-6"
	  }
	}
}
